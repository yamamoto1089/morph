ユーザー情報編集ページ

  <label>Name</label>
  <%= form_for(@user) do |f| %>
  <div class="form-group has-icon">
    <%= f.text_field :user_name, autofocus: true, class:"user_name"%>
    <span class="icon" aria-hidden="true"></span>
  </div>

  <div class="form-group has-icon">
    <label>Image</label>
    <%= f.attachment_field :user_image, placeholder: "プロフィール画像", class: "user_image" %>
  </div>

  <div class="form-introduction">
    <label>Introduction</label>
    <%= f.text_area :self_introduction, autofocus: true, class:"", id:"inputEmail", placeholder:"self_introduction"%>
    <span class="icon" aria-hidden="true"></span>
  </div>

  <%= f.submit "Update User", class:"" %>

  <% end %>

  <% if current_user.id == @user.id %>
   <a><%= link_to "Destroy" ,user_path,method: :delete  %></a>
  <% end %>




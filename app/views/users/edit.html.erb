<div class="users_edit">
  <label>名前</label>
  <%= form_for(@user) do |f| %>
  <div class="form-group has-icon">
    <%= f.text_field :user_name, autofocus: true, type: 'text' ,:html => {:id => "input_title" ,:type => "text"}%>
    <span class="icon" aria-hidden="true"></span>
  </div>

  <div class="form-group has-icon">
    <label>プロフィール画像</label>
    <div><%= f.attachment_field :user_image, placeholder: "プロフィール画像", class: "user_image" %></div>
  </div>

  <div class="form-introduction">
    <label>自己紹介文</label>
    <%= f.text_area :self_introduction, autofocus: true, class:"", id:"inputEmail", placeholder:"自己紹介文"%>
  </div>

  <%= f.submit "プロフィール更新", id:'submit' ,:class=>"btn waves-effect" %>

  <% end %>

  <% if current_user.id == @user.id %>
   <a><%= link_to "削除する" ,user_path,method: :delete ,id:'submit' ,:class=>"btn red waves-effect"  %></a>
  <% end %>


</div>

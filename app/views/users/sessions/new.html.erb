<div class="sign_main">
  <div class="circle_sign_1"></div>
  <div class="circle_sign_2"></div>


<div class="sign_container">
    <h4 class="sign_title">ログイン画面</h4>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div id="create_email" class='input-field'>
          <i class="icon-prepend fa fa-user" ></i>
          <%= f.text_field :email , autofocus: true ,:html => {:id => "input_email" ,:type => "text"}%>
          <label for="input_a">メールアドレス</label>
      </div>

      <div id="create_password" class='input-field'>
          <i class="icon-prepend fa fa-user" ></i>
          <%= f.password_field :password , autofocus: true ,:html => {:id => "input_password" ,:type => "text"}%>
          <label for="input_a">パスワード</label>
      </div>

        <div class="submit_button">
          <%= f.submit 'ログイン' , id:'submit', data: {disable_with: 'ログイン中...'} ,:class=>"btn waves-effect"%>
        </div>


        <div class="render_box">
        <%= render "users/shared/links" %>
        </div>
    <% end %>
  </div>
</div>
